<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Follow #<%= @follow.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/follows" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link follow start -->
      <div class="col">
        <a href="/follows/<%= @follow.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit follow
        </a>
      </div>
      <!-- Edit link follow end -->

      <!-- Delete link follow start -->
      <div class="col">
        <a href="/delete_follow/<%= @follow.id %>" class="btn btn-block btn-outline-secondary">
          Delete follow
        </a>
      </div>
      <!-- Delete link follow end -->
    </div>

    <dl>
      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @follow.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Stock
      </dt>
      <!-- Display stock_id start -->
      <dd>
        <%= @follow.stock_id %>
      </dd>
      <!-- Display stock_id end -->

      <dt>
        Notes
      </dt>
      <!-- Display notes start -->
      <dd>
        <%= @follow.notes %>
      </dd>
      <!-- Display notes end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@follow.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@follow.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
