<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Follow #<%= @follow.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/follows" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link follow start -->
      <div class="col">
        <% if current_user == @follow.user %>
          <a href="/follows/<%= @follow.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit follow
          </a>
        <% end %>
      </div>
      <!-- Edit link follow end -->

      <!-- Delete link follow start -->
      <div class="col">
        <% if current_user == @follow.user %>
          <a href="/delete_follow/<%= @follow.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete follow
          </a>
        <% end %>
      </div>
      <!-- Delete link follow end -->
    </div>

    <dl>
      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <% if @follow.user.present? %>
          <a href="/users/<%= @follow.user_id %>">
            <%= @follow.user.username %>
          </a>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Stock
      </dt>
      <!-- Display stock_id start -->
      <dd>
        <% if @follow.stock.present? %>
          <a href="/stocks/<%= @follow.stock_id %>">
            <%= @follow.stock.ticker %>
          </a>
        <% end %>
      </dd>
      <!-- Display stock_id end -->

      <dt>
        Notes
      </dt>
      <!-- Display notes start -->
      <dd>
        <%= @follow.notes %>
      </dd>
      <!-- Display notes end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@follow.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@follow.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

