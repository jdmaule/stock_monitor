<!-- Validation failure messages -->
<% if @follow.present? %>
  <% if @follow.errors.any? %>
    <% @follow.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new follow
</h1>


<hr>

<!-- Form follow start -->
<form action="/create_follow" method="post">
<!-- Form follow end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for stock_id start -->
  <div class="form-group">
    <label for="stock_id">
      Stock
    </label>

    <!-- Input for stock_id start -->
    <%= select_tag(:stock_id, options_from_collection_for_select(Stock.all, :id, :ticker, @follow.stock_id), :class => "form-control") %>
    <!-- Input for stock_id end -->
  </div>
  <!-- Label and input for stock_id end -->

  <!-- Label and input for notes start -->
  <div class="form-group">
    <label for="notes">
      Notes
    </label>

    <!-- Input for notes start -->
    <input type="text" id="notes" name="notes" class="form-control" value="<%= @follow.notes %>">
    <!-- Input for notes end -->
  </div>
  <!-- Label and input for notes end -->

  <button class="btn btn-block btn-outline-secondary">
    Create follow
  </button>
</form>

<hr>

<a href="/follows">
  Go back
</a>
