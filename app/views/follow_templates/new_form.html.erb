<h1>
  Add a new follow
</h1>


<hr>

<!-- Form follow start -->
<form action="/create_follow" method="post">
<!-- Form follow end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username, @follow.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for stock_id start -->
  <div class="form-group">
    <label for="stock_id">
      Stock
    </label>

    <!-- Input for stock_id start -->
    <%= select_tag(:stock_id, options_from_collection_for_select(Stock.all, :id, :ticker, @follow.stock_id), :class => "form-control") %>
    <!-- Input for stock_id end -->
  </div>
  <!-- Label and input for stock_id end -->

  <!-- Label and input for notes start -->
  <div class="form-group">
    <label for="notes">
      Notes
    </label>

    <!-- Input for notes start -->
    <input type="text" id="notes" name="notes" class="form-control">
    <!-- Input for notes end -->
  </div>
  <!-- Label and input for notes end -->

  <button class="btn btn-block btn-outline-secondary">
    Create follow
  </button>
</form>

<hr>

<a href="/follows">
  Go back
</a>
